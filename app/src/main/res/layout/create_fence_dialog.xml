<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_fence_create"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fenceCreate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="创建围栏"
            android:textColor="@color/dialog_title"
            android:textSize="20dp" />

        <View style="@style/dialog_split_line_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="去噪参数（单位：米）"
            android:textColor="@color/dialog_title"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtTxt_fenceCreate_denoise"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/all_border"
            android:hint="0"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fenceCreate_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="半径（单位：米）"
            android:textColor="@color/dialog_title"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtTxt_fenceCreate_radius"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/all_border"
            android:hint="1000"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fenceCreate_offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="偏离距离（单位：米）"
            android:textColor="@color/dialog_title"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtTxt_fenceCreate_offset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/all_border"
            android:hint="200"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/dialog_border"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fenceCreate_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/cancel_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/dialog_title"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_fenceCreate_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/sure_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>


</LinearLayout>